{
  "name": "zanzarah-tools",
  "version": "1.0.0",
  "description": "A set of various zanzarah modelling tools",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "JSONStream": "^1.3.0",
    "bl": "^1.2.0",
    "concurrently": "^3.1.0",
    "debug": "^2.6.0",
    "glob": "^7.1.1",
    "iconv": "^2.1.6",
    "jbinary": "kabbi/jBinary",
    "lodash": "^4.17.4",
    "node-uuid": "^1.4.3",
    "rufus": "^0.5.7",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "aframe": "^0.4.0",
    "aframe-orbit-controls-component": "^1.0.0",
    "aframe-orbit-controls-component-2": "^0.1.0",
    "babel-eslint": "^7.1.1",
    "cors": "^2.8.1",
    "dat.gui": "^0.6.1",
    "es6-promisify-all": "^0.1.0",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-scripts": "^0.8.4",
    "resolve-path": "^1.3.3",
    "xo": "^0.17.1"
  },
  "scripts": {
    "start": "concurrently \"react-scripts start\" \"node src/server/static.js\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "xo"
  },
  "keywords": [
    "zanzarah",
    "3D",
    "OpenGL",
    "editor",
    "viewer",
    "modelling"
  ],
  "author": "kabbi",
  "license": "MIT",
  "xo": {
    "space": true,
    "parser": "babel-eslint",
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "import/no-unassigned-import": "off",
      "unicorn/filename-case": "off",
      "array-bracket-spacing": "off",
      "object-curly-spacing": "off",
      "new-cap": "off"
    },
    "overrides": [
      {
        "extends": "xo-react",
        "files": "src/**/*.js",
        "esnext": true,
        "envs": "browser"
      },
      {
        "files": "src/utils/**/*.js",
        "rules": {
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": "src/**/*.test.js",
        "envs": "jest"
      }
    ]
  }
}
